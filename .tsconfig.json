{
  "baseUrl": "types",
  "typeRoots": ["types"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "lib": ["DOM", "ES5", "ScriptHost", "DOM.Iterable", "ES2015.Iterable"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}