{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@youhood/*": [
        "packages/*"
      ]
    }
  },
  "include": [
    "delivery/**/*",
    "packages/**/*",
    "scripts/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
