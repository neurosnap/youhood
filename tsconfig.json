{
  "baseUrl": "types",
  "typeRoots": ["types"],
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "lib": ["es2015", "es2017", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
